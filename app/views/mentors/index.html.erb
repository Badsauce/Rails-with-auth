<h1>Listing mentors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Organization</th>
      <th>Phone number</th>
      <th>Is remote</th>
      <th>Tier</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.name %></td>
        <td><%= mentor.organization %></td>
        <td><%= mentor.phone_number %></td>
        <td><%= mentor.is_remote %></td>
        <td><%= mentor.tier %></td>
        <td><%= mentor.twitter %></td>
        <td><%= link_to 'Show', mentor %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
          <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Mentor', new_mentor_path %>
<% end %>
